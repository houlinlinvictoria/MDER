### use # to comment out the configure item

################ Status ################
mode=test
# string: train/test/interactive_predict/api_service

################ Datasets(Input/Output) ################
datasets_fold=data/example_datasets6
train_file=train.csv
dev_file=dev.csv
test_file=test.csv
trainr_file=train1.csv
devr_file=dev1.csv
testr_file=test1.csv

delimiter=b
# string: (t: "\t";"table")|(b: "backspace";" ")|(other, e.g., '|||', ...)

use_pretrained_embedding=False
token_emb_dir=data/example_datasets6/word.emb

vocabs_dir=data/example_datasets6/vocabs

log_dir=data/example_datasets6/logs

checkpoints_dir=checkpoints/BILSTM-CRFs-datasets6

################ Labeling Scheme ################
label_scheme=BIO
# string: BIO/BIESO

label_level=2
# int, 1:BIO/BIESO; 2:BIO/BIESO + suffix
# max to 2

hyphen=-
# string: -|_, for connecting the prefix and suffix: `B_PER', `I_LOC'

suffix=[M,D]
# unnecessary if label_level=1

labeling_level=char
# string: word/char
# for English: ï¼ˆword: helloï¼‰ï¼Œï¼ˆchar: hï¼?# for Chinese: ï¼ˆword: ä½ å¥½ï¼‰ï¼Œï¼ˆchar: ä½ ï¼‰

measuring_metrics=[precision,recall,f1,accuracy]
# string: accuracy|precision|recall|f1
# f1 is compulsory
################ Model Configuration ################
use_crf=False
use_CNN=True
cell_type=LSTM
# LSTM, GRU
biderectional=True
encoder_layers=2

embedding_dim=200
#int, must be consistent with `token_emb_dir' file

hidden_dim=240

max_sequence_length=600
#int, cautions! set as a LARGE number as possible,
# this will be kept during training and inferring, text having length larger than this will be truncated.

use_self_attention=True
attention_dim=480
# unnecessary if use_self_attention=False

#cnn

cnn_layers=[ { 'dilation': 1 }, { 'dilation': 1 },{ 'dilation': 2 },]
cnn_filter_width=3
cnn_num_filter=200
cnn_output_width=0
cnn_repeat_times=4


CUDA_VISIBLE_DEVICES=0
# coincides with tf.CUDA_VISIBLE_DEVICES

seed=42

################ Training Settings ###
epoch=200
batch_size=16

dropout=0.5
learning_rate=0.001

optimizer=Adam
#string: GD/Adagrad/AdaDelta/RMSprop/Adam

checkpoints_max_to_keep=3
print_per_batch=10

is_early_stop=True
patient=40
# unnecessary if is_early_stop=False

checkpoint_name=model

################ Testing Settings ###
output_test_file=test.out
output_file=output.xls
nolable_output_test_file=nolable.test.out

is_nolable_output_sentence_entity=True
nolable_output_sentence_entity_file=nolable.test.entity.out

is_output_sentence_entity=True
is_real_output_sentence_entity=True
real_output_sentence_entity_file=real.test.entity.out
output_sentence_entity_file=test.entity.out
is_compare_output_sentence_entity=True
compare_output_sentence_entity_file=compare.test.entity.out
is_real_test=False
# unnecessary if is_output_sentence_entity=False


################ Api service Settings ###

ip=0.0.0.0
port=8000
# unnecessary to change if keep these as default.
# unnecessary to add not at api_service mode.
